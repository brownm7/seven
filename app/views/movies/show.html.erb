<body>
<div id="logotop">
<%= image_tag("LuqySevenLogo.png", :alt => "LuqySevenLogo", :height => "40%", :width => "40%") %>
</div>

<div id="showContent">
  <h2><%= @movie.title %></h2>
  <hr>
  <div class="showContainer">
      <div class="showLeft">
        <strong>Year:&nbsp;</strong>  <%= @movie.year %><br>
        <strong>Runtime:&nbsp;</strong>  <%= @movie.runtime %><br>
        <strong>Director:&nbsp;</strong>  <%= @movie.director %><br>
      </div>
      <div class="showRight">
        <strong>On Netflix:&nbsp;</strong>  <%= @movie.netflix %><br>
        <strong>On Amazon:&nbsp;</strong>  <%= @movie.amazon %><br>
        <strong>On Hulu:&nbsp;</strong>  <%= @movie.hulu %><br>
      </div>
  </div>

  <div class="bottom"><p>
      <strong>Description:&nbsp;</strong>
    <%= @movie.description %>
  </p></div>

</div>

  <center>
  <%= link_to 'Edit', edit_movie_path(@movie), :class=>"buttonLink" %>
  <%= link_to 'Back to Movie List', movies_path, :class=>"buttonLink"%>
  </center>

  <h2>Comments</h2>
  <% @movie.comments.each do |comment| %>
	<p>
		<h4 id="comment"><%= comment.body %></h4>
		<h5 id="comment"><%= comment.created_at.to_time.strftime('%B %e, %I:%M %p') %></h5>
	</p>
  <% end %>
  
  <h2>Add a comment:</h2>
  <%= form_for([@movie, @movie.comments.build]) do |f|%>
  	<p id="comment_box">
  		<%= f.label :body %><br>
  		<%= f.text_area :body, :cols=>"50", :rows=>"4" %>
  	</p>
  	<p id="comment_button">
  		<%= f.submit %>
  	</p>
  	<% end %>	
</body>
